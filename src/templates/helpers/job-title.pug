mixin jobTitle(speaker)
	- speaker = speaker || {}
	- var title = speaker.jobTitle || jobTitle
	- var org = speaker.organization || organization
	- var ws = speaker.website || website
	span.job-title!= title
	if title && org
		| , 
	if org
		span.organization!= typogr.typogrify(org)
	if ws
		.website
			a(href=ws target="_blank")!= url.parse(ws).hostname
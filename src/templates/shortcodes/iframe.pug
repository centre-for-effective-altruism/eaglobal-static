- const _src = src
- const _classes = fullPage ? 'iframe-fullpage' : ''
- const _id = fullPage ? 'fullpage-iframe' : ''
- const _mainContentText = centerContentText || 'main content'

if fullPage
  p.center
    a.scroll-iframe-into-view(href='#') Center #{_mainContentText} #[i.fa.fa-chevron-down]

iframe(src=_src class=_classes frameborder=0 id=_id)

if fullPage
  p.center
    a.scroll-iframe-into-view(href='#') Center #{_mainContentText} #[i.fa.fa-chevron-up]

  script.
    console.log('script loaded')
    function scrollFullPageIframe (event) {
      event.preventDefault()
      console.log('Scroll')
      var iframe = document.getElementById('fullpage-iframe');
      if (iframe) {
        iframe.scrollIntoView({ behavior: 'smooth', block: 'center'})
      }
    }

    const elements = document.getElementsByClassName('scroll-iframe-into-view')

    for (var i = 0; i < elements.length; i++) {
      console.log(elements[i])
      elements[i].addEventListener('click', scrollFullPageIframe, false);
    }
